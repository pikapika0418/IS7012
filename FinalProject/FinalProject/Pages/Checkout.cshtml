@page
@model FinalProject.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Check Out</h1>


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">

            @if (Model.Book !=null && Model.Book.NumberOfBooksAvailable >0)
            {

                <input type="hidden" asp-for="CheckoutForm.BookName" />
                <div class="form-group">
                    <label asp-for="CheckoutForm.BookName" class="control-label"></label>
                    <input asp-for="CheckoutForm.BookName" class="form-control" />
                    <span asp-validation-for="CheckoutForm.BookName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-page="./UserBookProfile" asp-route-id="@Model.Book.Id">
                            Check out Book
                    </a>
                </div>
            }
            else
            {

                <div class="alert alert-warning">
                    <p>This book is not available right now. Please come back later.</p>
                </div>
            }
        </form>
    </div>
</div>




