@page
@model FinalProject.Pages.GenreDetailModel
@{
    ViewData["Title"] = "GenreDetail";
}

<h1>ReplenishmentDetail</h1>

<h2 class="text-center text-success">@Model.Genre.Name</h2>
<div class="col-md-6">
    <h3>Comics List</h3>
    <ul>
        @foreach (var cl in Model.Genre.Books)
        {
            <li>
                Id=@cl.Id
                Name=@cl.Name
                Author=@cl.Author

                @if (cl.Replenish == "Less")
                {
                    <span class="badge badge-warning">Need to replenish</span>
                }
                else if (cl.Replenish == "Medium")
                {
                    <span class="badge badge-light">Need to replenish in future</span>
                }

                else if (cl.Replenish == "More")
                {
                    <span class="badge badge-warning">Copies available</span>
                }

                else
                {
                    <span class="badge badge-danger">No copies available</span>
                }

            </li>

        }
    </ul>
</div>

